<!doctype html>
<html lang="es">
  <head>
    <title>
      <%= title %>
    </title>
    <meta charset="utf-8">
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1"
      >
    <link
      href="https://fonts.googleapis.com/css?family=Roboto:300,400,400i,500,500i,700,900,900i"
      rel="stylesheet"
      >
    <link
      href="/website/css/admin-login.css"
      rel="stylesheet"
      >
  </head>
  <body>
    <div class="wrapper">
      <div class="login-form-wrapper">
        <h1><%= title %></h1>
        <p id="description">Enter your email address and we will you a email with the instrucctions to recover your account</h2>
        <form
          action="/recover-account"
          method="POST"
          autocomplete="off"
          >
          <input
            type="hidden"
            name="_csrf"
            value="<%- csrfToken -%>"
            />
          <div class="input-text">
            <input
              type="text"
              name="email_address"
              autocomplete="off"
              onfocus="onInputFocus(this)"
              onblur="onInputFocus(this)"
              required
              />
            <label>Email</label>
            <span class="hint">Your email address</span>
          </div>
          <button
            class="button"
            type="submit"
            >
            SEND
          </button>
          <p id="error-msg">
            <%= error_message %>
          </p>
          <p id="success-msg">
            <%= success_message %>
          </p>
        </form>
      </div>
    </div>
    <script src='/website/js/dashboard-login.js' charset="utf-8"></script>
  </body>
</html>
